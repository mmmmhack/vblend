# Makefile.osx  : top-level Mac OSX makefile for gamelib project

lua_dir=lua

ifndef $(PREFIX)
PREFIX=$(CURDIR)/dist
endif
export PREFIX

SO=so
EXE=
CP=cp
lua_libs=

all : subdirs

subdirs:
	cd lua && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd util && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd gl && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd glu && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd glfw && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd img && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd font && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)
	cd edit && $(MAKE) -f Makefile.osx $(MAKECMDGOALS)

$(PREFIX):
	mkdir $(PREFIX)

install : $(PREFIX)
	$(CP) $(lua_dir)/lua$(EXE) $(lua_libs) $(PREFIX)/
	$(CP) gl/*.$(SO) $(PREFIX)/
	$(CP) glu/*.$(SO) $(PREFIX)/
	$(CP) glfw/*.$(SO) $(PREFIX)/
	$(CP) glfw/libglfw/*.$(SO) $(PREFIX)/
	$(CP) util/*.$(SO) $(PREFIX)/
	$(CP) img/*.$(SO) $(PREFIX)/
	$(CP) img/zlib/*.$(SO) $(PREFIX)/
	$(CP) img/libpng/*.$(SO) $(PREFIX)/
	$(CP) font/*.$(SO) $(PREFIX)/
	$(CP) edit/*.$(SO) $(PREFIX)/
	$(CP) -v gamelib/*.lua $(PREFIX)/
	$(CP) -r demo/* $(PREFIX)/

# clean demo
clean: subdirs

